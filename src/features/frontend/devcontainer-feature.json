{
    "name": "Frontend",
    "id": "frontend",
    "version": "0.0.10",
    "description": "Install packages needed for frontend development",
    "options": {},
    "customizations": {
        "vscode": {
            "extensions": [
                "astro-build.astro-vscode",
                "NuclleaR.vscode-extension-auto-import",
                "aeschli.vscode-css-formatter",
                "oven.bun-vscode",
                "dbaeumer.vscode-eslint",
                "svelte.svelte-vscode",
                "jasonnutter.search-node-modules"
            ]
        }
    },
    // install .nvmrc specified version if the file exists
    "postAttachCommand": "(. \"$HOME/.bashrc\" && test -f \".nvmrc\" && nvm install --default 2>/dev/null && corepack enable\") || true"
}
